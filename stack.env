# Stack environment configuration for Umbrel deployment
# Fill in values as appropriate for your environment.

# Umbrel-managed values (typically injected by the Umbrel runtime)
APP_DAZNO_IP=
APP_LIGHTNING_NODE_DATA_DIR=
APP_BITCOIN_DATA_DIR=

# Bitcoin RPC credentials
BITCOIN_RPC_USER=
BITCOIN_RPC_PASS=

# Optional overrides (leave blank to use docker-compose.secure.yml defaults)
MCP_API_URL=https://api.dazno.de
LND_HOST=umbrel.local
LND_GRPC_PORT=10009
LND_REST_PORT=8080
LIGHTNING_TERMINAL_URL=http://lightning-terminal_web_1:3004
ELECTRS_URL=http://electrs_web_1:3002
BITCOIN_RPC_URL=http://bitcoin_bitcoind_1:8332
RUST_LOG=info
ENABLE_RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=60
AUTH_TOKEN_TTL_SECONDS=3600
